<!DOCTYPE html>
<html lang="en">
<%- include("layouts/header") -%>

    <body>
        <!-- Navigation-->
        <%- include("layouts/navbar") -%>
            <!-- Page Header-->
            <header class="masthead" style="background-image: url('assets/img/Login Page.jpg')">
                <div class="container position-relative px-4 px-lg-5" style="margin-top: 90px">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="psnlInfo">
                                <h2 class="loginHeading">Login</h2>
                                <form action="/checkUser" method="POST">
                                    <div>
                                        <input name="username" type="text" class="loginTextElement" placeholder="User Name" />
                                        <input name="password" type="password" class="loginTextElement" placeholder="Password" />
                                    </div>


                                    <% if (showErrorMsg) { %>
                                        <p style="color: aliceblue; text-align: center">Please <a href="signup" style="color: aqua;">register</a> yourself</p>
                                        <% } %>
                                            <input style="color:#fff; background-color:#1b9fc9;" type="submit" class="sbmtBtn" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Post Content-->
            <!-- Footer-->
            <%- include("layouts/footer") -%>
                <%- include("layouts/scripts") -%>
    </body>

</html>